<?xml version="1.0" encoding="utf-8" ?>

<Defs>

<ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>Shuttle_Player_Incoming</defName>
    <label>Shuttle(incoming)</label>
	<thingClass>SRTS.SRTSIncoming</thingClass>
    <skyfaller>
      <anticipationSound>Shuttle_Landing</anticipationSound>
      <anticipationSoundTicks>250</anticipationSoundTicks>
      <ticksToImpactRange>200~250</ticksToImpactRange>
      <angleCurve>
        <points>
          <li>(0,-60)</li>
          <li>(1,-90)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(-90,-120)</li>
          <li>(-90.5,-95)</li>
          <li>(-90.9,-95)</li>
          <li>(-90.95,-90)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0.95,2.5)</li>
          <li>(1,0)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0.6,0.6)</li>
          <li>(0.95,0.1)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>Shuttle_Player_Leaving</defName>
    <label>Shuttle(leaving)</label>
	<thingClass>SRTS.SRTSLeaving</thingClass>
    <skyfaller>
      <reversed>true</reversed>
      <anticipationSound>Shuttle_Leaving</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange>-40~-15</ticksToImpactRange>
      <moteSpawnTime>0.05</moteSpawnTime>
      <angleCurve>
        <points>
          <li>(0,90)</li>
          <li>(1,70)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(90,90)</li>
          <li>(90.15,100)</li>
          <li>(90.5,85)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.08,2)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0,0.2)</li>
          <li>(0.4,0.7)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>
 
  <ThingDef>
    <defName>Shuttle_Player_Active</defName>
    <label>Shuttle(active)</label>
    <category>Item</category>
    <thingClass>ActiveDropPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Building/Misc/Shuttle</texPath> 
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,3)</drawSize>
	  <color>(162,164,149)</color>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>true</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>
  
</Defs>